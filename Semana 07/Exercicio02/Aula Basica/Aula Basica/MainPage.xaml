<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aula_Basica.MainPage"
            UnselectedTabColor="LightGray"
            SelectedTabColor="Purple"
            BarBackground="GhostWhite">

    <ContentPage
        Title="Olá"
        IconImageSource="dotnet_bot">

        <ScrollView>
            <VerticalStackLayout Margin="20">
                <Label 
            Text="Este é meu primeiro app!" 
            FontSize="Header" 
            HorizontalOptions="Center"
            Padding="10"/>

                <Button 
            x:Name="BTNOLA"
            Text="Olá!"
            HorizontalOptions="Center"
            Clicked="BTNOLA_Clicked"/>

            </VerticalStackLayout>

        </ScrollView>
    </ContentPage>

    <ContentPage
        Title="Grid"
        IconImageSource="dotnet_bot">
        <ScrollView>
            <VerticalStackLayout Margin="20">
                <Label 
    Text="Página de grid" 
    FontSize="Header" 
    HorizontalOptions="Center"
    Padding="10"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <ContentPage
        Title="Navegação"
        IconImageSource="dotnet_bot">
        <ScrollView>
            <VerticalStackLayout Margin="20">
                <Label 
Text="Página de navegação" 
FontSize="Header" 
HorizontalOptions="Center"
Padding="10"/>


            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>
    

</TabbedPage>
